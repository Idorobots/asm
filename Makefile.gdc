#GDC makefile.

AR = ar
DC = gdc
DFLAGS = -Wall -Wextra -pedantic -Isrc
GDB = -funittest -fdebug -ggdb3
DLDLIBS = -Llib -L. -lasm

VPATH = src:src/dasm:src/utils

LIBOBJS = vm.o lexer.o parser.o ast.o kit.o lexical.o testing.o exception.o ctfe.o
OBJS = main.o

LIB = libasm.a
TARGET = asm

all : $(LIB) $(TARGET)

$(TARGET) : $(OBJS) $(LIB)
	$(DC) $^ $(DLDLIBS) -o$@

$(LIB) : $(LIBOBJS)
	$(AR) rc $@ $^

%.o : %.d
	$(DC) $(DFLAGS) $(GDB) $< -c

clean:
	rm -f $(LIB)
	rm -f $(TARGET)
	rm -f *.o
